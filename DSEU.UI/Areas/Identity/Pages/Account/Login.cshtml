@page
@model LoginModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Authorization"].Value;
    string ErrorClass = ModelState.IsValid ? string.Empty : "error";
}

@section SubTitle{
    <div class="page__subtitle">
        <p>
            @Localizer["Enter your"] <label asp-for="Input.UserName">@Localizer["UserName"]</label>
            @Localizer["And"] <label asp-for="Input.Password">@Localizer["Password"]</label>,
            @Localizer["That login in portal"]
        </p>
    </div>
}

<form method="post">
    <div class="authorization__field">
        <div asp-validation-summary="All" style="color:red;" class="error"></div>
        <div class="authorization__log">
            <div class="login-group @ErrorClass">
                <input asp-for="Input.UserName" class="inpt" required placeholder="@Localizer["UserName"]">
            </div>
            <div class="password-group @ErrorClass">
                <input asp-for="Input.Password" class="inpt" required placeholder="@Localizer["Password"]">
            </div>
            <input asp-for="Input.RememberMe" type="checkbox" id="rememberMe">
            <label class="checked" for="rememberMe">@Localizer["Remember me"]</label>
            <div class="authorization__button">
                <input type="submit" id="submit" value="@Localizer["Log in"]" class="column button active">
                <a asp-page="./ForgotPassword">@Localizer["Forgot your password"]</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
