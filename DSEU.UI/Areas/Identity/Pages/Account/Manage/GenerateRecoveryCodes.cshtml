@page
@model GenerateRecoveryCodesModel
@inject IViewLocalizer  Localizer
@{
    ViewData["Title"] = Localizer["Generate two-factor authentication (2FA) recovery codes"].Value;
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h4>@ViewData["Title"]</h4>
<div class="alert warning" role="alert">
    <p>
        <span class="glyphicon glyphicon-warning-sign"></span>
        <strong>@Localizer["Put these codes in a safe place"].</strong>
    </p>
    <p>
        @Localizer["If you lose your device and dont have the recovery codes you will lose access to your account"].
    </p>
    <p>
        @Localizer["Generating new recovery codes does not change the keys used in authenticator apps. If you wish to change the key"]
        @Localizer["used in an authenticator app you should"] <a asp-page="./ResetAuthenticator">@Localizer["reset your authenticator keys"].</a>
    </p>
</div>
<div>
    <form method="post" class="form-group">
        <div class="reset__button">
            <button type="submit" id="reset-authenticator-button">@Localizer["Generate Recovery Codes"]</button>
        </div>
    </form>
</div>